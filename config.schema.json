{
  "pluginAlias": "Comelit",
  "pluginType": "platform",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Installation name",
        "type": "string",
        "required": true,
        "default": "My Home"
      },
      "username": {
        "title": "Username",
        "type": "string",
        "required": true,
        "default": ""
      },
      "password": {
        "title": "Comelit username",
        "type": "string",
        "required": true,
        "default": ""
      },
      "hub_username": {
        "title": "Comelit HUB username",
        "type": "string",
        "required": false,
        "default": ""
      },
      "hub_password": {
        "title": "Comelit HUB password",
        "type": "string",
        "required": false,
        "default": ""
      },
      "broker_url": {
        "title": "Broker URL",
        "type": "string",
        "required": true,
        "default": "mqtt://192.168.0.66"
      },
      "client_id": {
        "title": "Client ID",
        "type": "string",
        "required": false,
        "default": "A98FAF87-3348-48E8-A3AB-693D8E53E353"
      },
      "export_prometheus_metrics": {
        "title": "Export Prometheus Metrics",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "exporter_http_port": {
        "title": "Prometheus exporter HTTP port",
        "type": "number",
        "required": false,
        "default": 3002
      }

    }
  }
}
