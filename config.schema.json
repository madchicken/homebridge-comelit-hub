{
  "pluginAlias": "Comelit",
  "pluginType": "platform",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Installation name",
        "type": "string",
        "required": true,
        "default": "My Home"
      },
      "username": {
        "title": "Username",
        "type": "string",
        "required": true,
        "default": ""
      },
      "password": {
        "title": "Comelit username",
        "type": "string",
        "required": true,
        "default": ""
      },
      "hub_username": {
        "title": "Comelit HUB username",
        "type": "string",
        "required": false,
        "default": ""
      },
      "hub_password": {
        "title": "Comelit HUB password",
        "type": "string",
        "required": false,
        "default": ""
      },
      "broker_url": {
        "title": "Broker URL",
        "type": "string",
        "required": true,
        "default": "mqtt://192.168.0.66"
      },
      "blind_closing_time": {
        "title": "Time spent by the blind to get fully closed from open position (default 35 seconds)",
        "type": "number",
        "required": false,
        "default": 35
      },
      "keep_alive": {
        "title": "Number of milliseconds for keep alive message",
        "type": "number",
        "required": false,
        "default": 120000
      },
      "alarm_code": {
        "title": "Secret code for VEDO alarm (if present)",
        "type": "string",
        "required": false,
      },
      "disable_alarm": {
        "title": "Disable VEDO alarm accessory",
        "type": "boolean",
        "required": false,
        "default": false
      }
    }
  }
}
